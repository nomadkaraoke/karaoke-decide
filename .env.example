# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GCS_BUCKET_NAME=karaoke-decide-storage
FIRESTORE_DATABASE=(default)

# Environment
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Emulators (for local development)
FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
STORAGE_EMULATOR_HOST=http://127.0.0.1:4443

# Spotify OAuth (get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/services/spotify/callback

# Last.fm (get from https://www.last.fm/api/account/create)
LASTFM_API_KEY=
LASTFM_SHARED_SECRET=

# SendGrid (for magic link emails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@nomadkaraoke.com

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=

# Frontend URL (for magic link redirects)
FRONTEND_URL=http://localhost:3000
